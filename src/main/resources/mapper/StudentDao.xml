<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ryml.mapper.StudentMapper" >

    <select id="getAll" resultType="com.ryml.entity.Student">
      SELECT * FROM student
    </select>

    <resultMap id="menuMap" type="com.ryml.entity.Menu">
        <result column="m1.id" property="id"></result>
        <result column="m1.name" property="name"></result>
        <collection property="childrenMenus" javaType="com.ryml.entity.Menu">
            <result column="m2.id" property="id"></result>
            <result column="m2.name" property="name"></result>
            <result column="m2.parentId" property="parentId"></result>
            <collection property="childrenMenus" javaType="com.ryml.entity.Menu">
                <result column="m3.id" property="id"></result>
                <result column="m3.name" property="name"></result>
                <result column="m3.parentId" property="parentId"></result>
            </collection>
        </collection>
    </resultMap>

    <select id = "getMenu" resultMap="menuMap">
        SELECT
            m1.id,
            m1. NAME,
            m1.parent_id,
            m2.id,
            m2. NAME,
            m2.parent_id,
            m3.id,
            m3. NAME,
            m3.parent_id
        FROM
            menu m1
        INNER JOIN menu m2
        ON m1.id = m2.parent_id
        LEFT JOIN menu m3
        ON m2.id = m3.parent_id
    </select>

</mapper>